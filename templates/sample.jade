!!! 5
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        title= family
        meta(name="description", content="Font sampler page")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/normalize/2.1.3/normalize.min.css")
        link(rel="stylesheet", href="font.css")
        style.
            body { background-color: #efefef; }
            a { color: #333; }
            footer { margin-bottom: 2em; }
            h1 { color: #bbb; margin-bottom: 0; }
            hr.heading { border: 0; height: 0; border-top: 1px solid rgba(0, 0, 0, 0.1); border-bottom: 1px solid rgba(255, 255, 255, 0.3); }
            hr.ornament { padding: 0; border: none; border-top: medium double rgba(0, 0, 0, 0.1); color: #333; text-align: center; }
            .container { margin: 0 auto; max-width: 960px; padding: 0 2em; color: #222; }
            .samples { font-family: '#{family}'; margin-bottom: 2em; }
            .pangram { color: #222; }
            .large { font-size: 6em; line-height: 1.1em; margin-bottom: .5em; }
            .faces { margin-bottom: 2em; }
            .face { margin-bottom: .5em; white-space: nowrap; }
            .face .name,
            footer p { display: block; font-family: arial; font-size: .8em; font-weight: normal; color: #777; margin: 0; }
            .face .pangram { display: block; font-size: 3em; margin: 0; }
        body
            .container
                h1= family
                hr.heading
                .samples
                    .pangram.large= pangram
                    .faces
                        each face in data
                            .face
                                h2.name= face.title
                                p.pangram(style="#{face.css}")= pangram
                    each text in sampleText
                        p.paragraph(style="#{css}")= text
                footer
                    hr.ornament
                    p
                        | Generated by 
                        a(href="") wf-sampler
                        |.
